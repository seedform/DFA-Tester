<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_grey_bg"
    android:fitsSystemWindows="true" >

    <TextView
        android:id="@+id/textview_dfa_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/title_dfa_list"
        android:textColor="@color/app_grey_3"
        android:textSize="15sp"
        android:textStyle="italic" />

    <GridView
        android:id="@+id/gridview_dfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview_dfa_list_title"
        android:cacheColorHint="@android:color/transparent"
        android:descendantFocusability="afterDescendants"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="@integer/columns"
        android:padding="4dp" />

    <TextView
        android:id="@+id/textview_empty_gridview_dfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/empty_dfa_listview_text"
        android:textColor="@color/app_grey_3"
        android:textSize="22sp" />

</RelativeLayout>